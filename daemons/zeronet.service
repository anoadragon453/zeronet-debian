[Unit]
Description=Zeronet Peer
After=network.target
[Service]
Type=simple
User=zeronet
Group=zeronet
WorkingDirectory=/etc/share/zeronet
ExecStart=/usr/bin/python zeronet.py --ip_external $(hostname).local --trackers_file /etc/share/zeronet/bootstrap

TimeoutSec=300

[Install]
WantedBy=multi-user.target
